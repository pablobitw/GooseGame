<Page x:Class="GameClient.Views.VerifyRecoveryCodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="VerifyRecoveryCodePage">

    <Page.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <Button Content="{x:Static props:Strings.BackButton}"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,21,0,0"
                Width="78"
                Click="OnBackButtonClick" Height="35" Cursor="Hand"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="350"
                Background="#D8FFFFFF" CornerRadius="20" Padding="30">
            <StackPanel>
                <TextBlock Text="{x:Static props:Strings.VerifyRecoveryCodeLabel}" 
                           FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="{x:Static props:Strings.EnterRecoveryCodeInstruction}" 
                           TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="14" Foreground="#666666" Margin="0,0,0,15"/>

                <Grid Margin="0,5">
                    <TextBox x:Name="CodeTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="OnGenericTextBoxChanged"
                             MaxLength="6"
                             Tag="{x:Reference CodePlaceholder}"/>
                    <TextBlock x:Name="CodePlaceholder" Text="{x:Static props:Strings.VerificationCodeLabel}" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                </Grid>

                <Button x:Name="VerifyButton" Content="{x:Static props:Strings.VerifyButton}" 
                        HorizontalAlignment="Center" Margin="0,20,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="OnVerifyButtonClick"/>

                <Button x:Name="ResendCodeButton" Content="{x:Static props:Strings.ResendCodeButton}"
                        HorizontalAlignment="Center" Margin="0,10,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Background="Gray"
                        Click="OnResendCodeButtonClick"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>