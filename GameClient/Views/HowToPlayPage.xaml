<Page x:Class="GameClient.Views.HowToPlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameClient.Views"
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="How To Play"
      FontFamily="/Assets/Fonts/#Dosis">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/fondogod.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#F2FFFFFF" CornerRadius="30" Margin="80" BorderBrush="#2C3E50" BorderThickness="2">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Static props:Strings.HowToPlayTitle}" 
                           FontSize="54" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="#2C3E50" Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="TilesListBox" 
                             ItemsSource="{Binding TileList}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder" Background="#EAECEE" CornerRadius="15" Margin="5" Padding="12">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding ImagePath}" Width="45" Height="45" Margin="0,0,15,0" Stretch="Uniform"/>
                                        <TextBlock Text="{Binding Name}" FontSize="22" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#34495E"/>
                                    </StackPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#3498DB"/>
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#2980B9"/>
                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="1"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Border Grid.Column="1" Background="White" CornerRadius="25" Margin="25,0,0,0" Padding="50">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Direction="315" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>

                        <StackPanel VerticalAlignment="Center" DataContext="{Binding SelectedItem, ElementName=TilesListBox}">
                            <Image Source="{Binding ImagePath}" 
                                   Width="280" Height="280" 
                                   Margin="0,0,0,40" 
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBlock Text="{Binding Name}" 
                                       FontSize="42" FontWeight="Heavy" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#2980B9"/>

                            <Rectangle Height="3" Width="100" Fill="#3498DB" Margin="0,15,0,25" HorizontalAlignment="Center"/>

                            <TextBlock Text="{Binding Description}" 
                                       FontSize="24" TextWrapping="Wrap" 
                                       TextAlignment="Center" 
                                       Foreground="#566573" 
                                       LineHeight="35"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Button x:Name="BackButton" 
                        Content="{x:Static props:Strings.HowToPlayBackButton}" 
                        Grid.Row="2" 
                        HorizontalAlignment="Center" 
                        Width="500" Height="60" 
                        Margin="0,40,0,0"
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Click="BackButton_Click"
                        FontSize="20" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Page>