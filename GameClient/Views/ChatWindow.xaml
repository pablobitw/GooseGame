<Window x:Class="GameClient.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat de Prueba" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="MessagesListBox" Grid.Row="0" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PlayerName}" FontWeight="Bold" Foreground="CornflowerBlue" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Message}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageBoxTextBox" Grid.Column="0" 
                     Margin="0,0,10,0" 
                     VerticalContentAlignment="Center"
                     KeyDown="MessageBoxTextBox_KeyDown"/>

            <Button x:Name="SendButton" Grid.Column="1" 
                    Content="Enviar" 
                    Width="60"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>