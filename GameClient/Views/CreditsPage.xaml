<Page x:Class="GameClient.Views.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CreditsPage"
      FontFamily="/Assets/Fonts/#Dosis">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2B1029" Offset="0.0"/>
                <GradientStop Color="#1A0918" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#33FFFFFF" CornerRadius="20" Margin="100" Padding="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="ACERCA DE NOSOTROS" 
                           Foreground="White" FontSize="48" FontWeight="Bold" Height="55" 
                           >
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="4" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Image Source="/Assets/Icons/aboutus.png" Width="116" Height="126" Margin="0,0,0,30"/>

                <TextBlock Text="Desarrollado por:" Foreground="#FFD700" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Foreground="White" FontSize="32" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,30" Text="Pablo Silva"/>

                <TextBlock Text="Arte y Asistencia IA:" Foreground="#FFD700" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Gemini AI (Google)" Foreground="White" FontSize="32" FontWeight="SemiBold"/>
                </StackPanel>

                <TextBlock Text="Versión 1.0.0 Alpha" Foreground="Gray" FontSize="16" HorizontalAlignment="Center" Margin="0,40,0,0"/>

            </StackPanel>
        </Border>

        <Button x:Name="BackButton" Content="VOLVER" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40"
                Width="120" Height="50" Background="Transparent" Foreground="White"
                FontSize="20" FontWeight="Bold" BorderBrush="White" BorderThickness="2"
                Cursor="Hand" Click="BackButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#33FFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>