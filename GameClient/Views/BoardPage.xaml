<Page x:Class="GameClient.Views.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameClient.Views"
      xmlns:dialogs="clr-namespace:GameClient.Views.Dialogs"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="BoardPage"
      FontFamily="/Assets/Fonts/#Dosis"
      Background="#3E1B3C">

    <Page.Resources>
        <ContextMenu x:Key="PlayerContextMenu">
            <MenuItem Header="Agregar a Amigos" Click="AddFriendMenuItem_Click" Foreground="LightGreen" FontWeight="SemiBold"/>
            <MenuItem Header="Mensaje Privado" Click="PrivateChatMenuItem_Click" Foreground="Cyan" FontWeight="SemiBold"/>
            <Separator Background="Gray"/>
            <MenuItem Header="Inicia Votación de Expulsión" Click="VoteKickMenuItem_Click" Foreground="Red" FontWeight="Bold"/>
        </ContextMenu>

        <Style x:Key="ChatTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="10,5" CornerRadius="5,5,0,0" Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid">

        <Viewbox Stretch="Uniform">
            <Canvas x:Name="BoardCanvas" Width="1200" Height="800" Background="Transparent">
                <Image x:Name="BoardImage" Stretch="Fill" Width="1200" Height="800"/>
            </Canvas>
        </Viewbox>

        <Grid>
            <Button x:Name="MenuButton" 
                    Height="60" Width="60" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="30" 
                    Background="#AA000000" Foreground="White"
                    BorderThickness="2" BorderBrush="White"
                    Cursor="Hand" 
                    Click="MenuButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" 
                                              Fill="{TemplateBinding Foreground}" 
                                              Stretch="Uniform" Width="24" Height="24" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CC444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Border x:Name="TurnTimerPanel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0" 
                    Background="#CC000000" CornerRadius="15" Padding="20,10" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="24" Height="24" Margin="0,0,10,0">
                        <Path Fill="White" Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" />
                    </Viewbox>
                    <TextBlock x:Name="TurnTimerText" Text="Tiempo: 60s" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player1Panel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible"
                    ContextMenu="{StaticResource PlayerContextMenu}">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player1Avatar" Stretch="UniformToFill">
                                    <ImageBrush.RelativeTransform>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player1Name" Text="Player 1" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player2Panel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,110,325,0" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible"
                    ContextMenu="{StaticResource PlayerContextMenu}">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player2Avatar" Stretch="UniformToFill">
                                    <ImageBrush.RelativeTransform>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player2Name" Text="Player 2" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player3Panel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="60,0,0,60" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible"
                    ContextMenu="{StaticResource PlayerContextMenu}">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player3Avatar" Stretch="UniformToFill">
                                    <ImageBrush.RelativeTransform>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player3Name" Text="Player 3" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player4Panel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,325,60" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible"
                    ContextMenu="{StaticResource PlayerContextMenu}">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player4Avatar" Stretch="UniformToFill">
                                    <ImageBrush.RelativeTransform>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player4Name" Text="Player 4" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" 
                    Background="#AA000000" CornerRadius="10" Padding="10" Width="300" Height="274">
                <StackPanel>
                    <TextBlock Text="Registro de Juego" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <ListBox x:Name="GameLogListBox" Height="220" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="18"/>
                </StackPanel>
            </Border>

            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,310,20,0" 
                    Background="#CC000000" CornerRadius="10" Width="300" Height="400">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <TabControl x:Name="ChatTabControl" Grid.Row="0" Background="Transparent" BorderThickness="0">
                        <TabItem Header="General" Style="{StaticResource ChatTabItemStyle}" Tag="General">
                            <ListBox x:Name="GeneralChatList" Background="#33000000" BorderThickness="0" Foreground="White" Margin="0,5,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                    </TabControl>

                    <Grid Grid.Row="1" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ChatInputBox" Background="#88FFFFFF" Foreground="Black" 
                                 VerticalContentAlignment="Center" Padding="5" KeyDown="ChatInputBox_KeyDown"/>
                        <Button Content="Enviar" Grid.Column="1" Width="60" Margin="5,0,0,0" 
                                Background="#4CAF50" Foreground="White" Click="SendChatButton_Click"/>
                    </Grid>
                </Grid>
            </Border>

            <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" 
                    Background="#DDFFFFFF" CornerRadius="20" Padding="20">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Dado 1" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Border BorderBrush="Black" BorderThickness="2" Width="60" Height="60" Margin="5" Background="White">
                            <TextBlock x:Name="DiceOneText" Text="?" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="20,0">
                        <TextBlock Text="Dado 2" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Border BorderBrush="Black" BorderThickness="2" Width="60" Height="60" Margin="5" Background="White">
                            <TextBlock x:Name="DiceTwoText" Text="?" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <Button x:Name="RollDiceButton" Content="Tirar Dados" 
                            Width="280" Height="60" Margin="20,0,0,0" 
                            FontSize="24" FontWeight="Bold" 
                            Click="RollDiceButton_Click"/>
                </StackPanel>
            </Border>

            <Border x:Name="StartTimerPanel" Background="#E6000000" CornerRadius="20" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="60,30" Visibility="Collapsed" Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="La partida comienza en:" Foreground="White" FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="StartTimerText" Text="5" Foreground="#FFD700" FontSize="120" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="10"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Border>

            <dialogs:PauseMenuDialog x:Name="PauseMenu" Visibility="Collapsed" Panel.ZIndex="200"/>

            <dialogs:LuckyBoxDialog x:Name="LuckyBox" Visibility="Collapsed" Panel.ZIndex="300"/>

            <dialogs:VoteKickPromptDialog x:Name="VoteKickPrompt" Visibility="Collapsed" Panel.ZIndex="400"/>

            <dialogs:KickReasonDialog x:Name="KickReasonPrompt" Visibility="Collapsed" Panel.ZIndex="500"/>

            <dialogs:FriendRequestDialog x:Name="FriendRequestPopup" Visibility="Collapsed" Panel.ZIndex="600"/>

        </Grid>
    </Grid>
</Page>