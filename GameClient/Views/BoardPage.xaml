<Page x:Class="GameClient.Views.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="BoardPage"
      FontFamily="/Assets/Fonts/#Dosis"
      Background="#3E1B3C">
    <Grid x:Name="MainGrid">

        <Viewbox Stretch="Uniform">
            <Canvas x:Name="BoardCanvas" Width="1200" Height="800" Background="Transparent">
                <Image x:Name="BoardImage" 
                       Stretch="Fill" 
                       Width="1200" Height="800"/>
            </Canvas>
        </Viewbox>

        <Grid>
            <Button x:Name="BackButton" 
                    Height="80" Width="80" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="20" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Cursor="Hand" 
                    Click="BackButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <Image Source="/Assets/Icons/back_icon.png" Stretch="Uniform"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Border x:Name="Player1Panel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player1Avatar" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player1Name" Text="Player 1" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player2Panel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,340,0" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player2Avatar" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player2Name" Text="Player 2" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player3Panel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player3Avatar" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player3Name" Text="Player 3" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border x:Name="Player4Panel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" 
                    Width="240" Height="80" Background="#CC000000" CornerRadius="10" 
                    Visibility="Hidden" d:Visibility="Visible">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                    <Grid Width="60" Height="60">
                        <Ellipse Fill="Gray"/>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="Player4Avatar" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse Stroke="White" StrokeThickness="2"/>
                    </Grid>
                    <TextBlock x:Name="Player4Name" Text="Player 4" Foreground="White" 
                               VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Border>

            <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" 
                    Background="#AA000000" CornerRadius="10" Padding="10" Width="300" Height="274">
                <StackPanel>
                    <TextBlock Text="Registro de Juego" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <ListBox x:Name="GameLogListBox" Height="330" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="18"/>
                </StackPanel>
            </Border>

            <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" 
                    Background="#DDFFFFFF" CornerRadius="20" Padding="20">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Dado 1" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Border BorderBrush="Black" BorderThickness="2" Width="60" Height="60" Margin="5" Background="White">
                            <TextBlock x:Name="DiceOneText" Text="?" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="20,0">
                        <TextBlock Text="Dado 2" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Border BorderBrush="Black" BorderThickness="2" Width="60" Height="60" Margin="5" Background="White">
                            <TextBlock x:Name="DiceTwoText" Text="?" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <Button x:Name="RollDiceButton" Content="Tirar Dados" 
                            Width="280" Height="60" Margin="20,0,0,0" 
                            FontSize="24" FontWeight="Bold" 
                            Click="RollDiceButton_Click"/>
                </StackPanel>
            </Border>

            <Border x:Name="StartTimerPanel" Background="#E6000000" CornerRadius="20" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="60,30" Visibility="Collapsed" Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="La partida comienza en:" Foreground="White" FontSize="36" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="StartTimerText" Text="5" Foreground="#FFD700" FontSize="120" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="10"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>