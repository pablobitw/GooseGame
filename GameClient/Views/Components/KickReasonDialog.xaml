<UserControl x:Class="GameClient.Views.Dialogs.KickReasonDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:props="clr-namespace:GameClient.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="#CC000000">
        <Border Width="400" Height="300" Background="#333" 
                CornerRadius="15" BorderBrush="Gold" BorderThickness="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Margin="20">
                <TextBlock Text="{x:Static props:Strings.KickDialogTitle}" Foreground="Gold" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock x:Name="TargetLabel" Text="Selecciona el motivo:" Foreground="White" FontSize="16" Margin="0,0,0,10"/>

                <ComboBox x:Name="KickReasonCombo" Height="40" FontSize="16" Margin="0,0,0,20" SelectedIndex="0">
                    <ComboBoxItem Content="{x:Static props:Strings.KickReasonAFK}"/>
                    <ComboBoxItem Content="{x:Static props:Strings.KickReasonToxic}"/>
                    <ComboBoxItem Content="{x:Static props:Strings.KickReasonCheating}"/>
                    <ComboBoxItem Content="{x:Static props:Strings.KickReasonSpam}"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{x:Static props:Strings.DialogConfirmBtn}" Width="120" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="10" 
                            Click="ConfirmKickButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="{x:Static props:Strings.DialogCancelBtn}" Width="120" Height="40" Background="#F44336" Foreground="White" FontWeight="Bold" Margin="10" 
                            Click="CancelKickButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>