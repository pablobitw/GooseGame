<UserControl x:Class="GameClient.Views.Dialogs.FriendRequestDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:props="clr-namespace:GameClient.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="#CC000000">
        <Border Width="450" Height="250" Background="#2D2D30" 
                CornerRadius="15" BorderBrush="#4CAF50" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#4CAF50"/>
            </Border.Effect>

            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="{x:Static props:Strings.FriendRequestDialogTitle}" 
                           Foreground="#4CAF50" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Static props:Strings.FriendRequestPlayerPrefix}" Foreground="White" FontSize="18" Margin="0,0,5,0"/>
                    <TextBlock x:Name="SenderNameText" Text="PlayerX" 
                               Foreground="#4CAF50" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="{x:Static props:Strings.FriendRequestPlayerSuffix}" 
                           Foreground="White" FontSize="18" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="{x:Static props:Strings.DialogAcceptBtnUpper}" Width="120" Height="40" Margin="10" 
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            Click="AcceptButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="{x:Static props:Strings.DialogRejectBtnUpper}" Width="120" Height="40" Margin="10" 
                            Background="#F44336" Foreground="White" FontWeight="Bold"
                            Click="DeclineButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>