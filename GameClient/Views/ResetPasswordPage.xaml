<Page x:Class="GameClient.Views.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="ResetPasswordPage">

    <Page.Resources>
    </Page.Resources>

    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="350"
                Background="#D8FFFFFF" CornerRadius="20" Padding="30">
            <StackPanel>
                <TextBlock Text="{x:Static props:Strings.ResetPasswordTitle}" 
                           FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="{x:Static props:Strings.ResetPasswordInstruction}" 
                           TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="14" Foreground="#666666" Margin="0,0,0,15"/>

                <Grid Margin="0,5">
                    <PasswordBox x:Name="NewPasswordBox" 
                                 Style="{StaticResource InputPasswordBoxStyle}"
                                 GotFocus="OnGenericPasswordFocus"
                                 LostFocus="OnGenericPasswordLost"
                                 PasswordChanged="OnGenericPasswordChanged"
                                 Tag="{x:Reference NewPasswordPlaceholder}"/>
                    <TextBlock x:Name="NewPasswordPlaceholder" Text="{x:Static props:Strings.NewPasswordLabel}" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                </Grid>

                <Grid Margin="0,5">
                    <PasswordBox x:Name="RepeatNewPasswordBox" 
                                 Style="{StaticResource InputPasswordBoxStyle}"
                                 GotFocus="OnGenericPasswordFocus"
                                 LostFocus="OnGenericPasswordLost"
                                 PasswordChanged="OnGenericPasswordChanged"
                                 Tag="{x:Reference RepeatNewPasswordPlaceholder}"/>
                    <TextBlock x:Name="RepeatNewPasswordPlaceholder" Text="{x:Static props:Strings.RepeatNewPasswordLabel}" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                </Grid>

                <Button x:Name="ConfirmButton" Content="{x:Static props:Strings.ConfirmButton}" 
                        HorizontalAlignment="Center" Margin="0,20,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="OnConfirmButtonClick" Width="132"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>