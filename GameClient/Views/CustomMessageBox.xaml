<Window x:Class="GameClient.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación" 
        
        Height="800" Width="1000"
        
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Viewbox>
        <Border Width="1100" Height="900">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="25" ShadowDepth="0"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="/Assets/alert.png" Stretch="Uniform"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0.8*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="MessageText" Grid.Row="1"
                           Text="Mensaje de ejemplo."
                           FontFamily="/Assets/Fonts/#Dosis" FontSize="43" FontWeight="ExtraBold"
                           TextWrapping="Wrap" TextAlignment="Center"
                           Foreground="#5C4033"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           MaxWidth="450" Width="342"/>

                <StackPanel x:Name="ButtonsPanel" Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,30,0,0"/>
            </Grid>
        </Border>
    </Viewbox>
</Window>