<Window x:Class="GameClient.GameMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        xmlns:props="clr-namespace:GameClient.Resources"
        mc:Ignorable="d"
        Title="GameMainWindow"
        
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="Black">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">

            <Grid x:Name="MainMenuGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="/Assets/fondo3.png" 
                                Stretch="UniformToFill" 
                                Opacity="1"/>
                </Grid.Background>

                <MediaElement x:Name="BackgroundVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Manual"
                              Stretch="UniformToFill"
                              IsMuted="True"
                              IsHitTestVisible="False"
                              Loaded="MediaElement_Loaded"
                              MediaEnded="MediaElement_MediaEnded" 
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>

                <StackPanel HorizontalAlignment="Center" Margin="0,518,0,0">
                    <Button x:Name="PlayButton" Content="{x:Static props:Strings.PlayButton}" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,10" Width="514" Height="135"
                            FontFamily="/Assets/Fonts/#Dosis" FontSize="70" FontWeight="Bold" 
                            Click="PlayButtonClick"/>
                </StackPanel>

                <Button x:Name="QuitButton" 
                        Height="150" Width="150" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Margin="40" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="QuitButtonClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Icons/exit_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="50" CenterY="50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ProfileButton" 
                        Height="150" Width="150" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="40" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="ProfileButtonClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Icons/profile_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="50" CenterY="50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="OptionsButton" 
                        Height="150" Width="150"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Margin="40" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="OptionsButtonClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Source="/Assets/Icons/configuration_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="50" CenterY="50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Viewbox>
</Window>