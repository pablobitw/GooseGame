<Window x:Class="GameClient.GameMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        xmlns:props="clr-namespace:GameClient.Resources"
        mc:Ignorable="d"
        Title="GameMainWindow"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="Black">

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">

            <Grid x:Name="MainMenuGrid">

                <MediaElement x:Name="BackgroundVideo"
                              LoadedBehavior="Manual" 
                              UnloadedBehavior="Manual"
                              Stretch="UniformToFill" 
                              IsMuted="True" 
                              IsHitTestVisible="False"
                              Loaded="MediaElement_Loaded" 
                              MediaEnded="MediaElement_MediaEnded" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch"/>

                <Border>
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#00000000" Offset="0.7"/>
                            <GradientStop Color="#44000000" Offset="1.2"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>

                <Button x:Name="HowToPlayButton" 
                        Width="130" Height="130" 
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="40,40,0,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" 
                        Click="HowToPlayButtonClick" 
                        ToolTip="Cómo Jugar"
                        Panel.ZIndex="5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="Black" Opacity="0.3" Margin="5"/>
                                <Image Source="/Assets/Icons/howtoplay_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Image Source="/Assets/Icons/coins_banner.png" 
                       Stretch="Uniform"
                       HorizontalAlignment="Right" VerticalAlignment="Top"
                       Width="325"
                       Margin="0,0,127,0" Height="274"/>

                <TextBlock x:Name="CoinCountText" 
                           Text="1500" 
                           FontFamily="Fredoka Medium" 
                           FontSize="42" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Right" VerticalAlignment="Top"
                           Margin="0,75,170,0" Width="177" Height="56">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="3" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Button x:Name="ProfileButton" 
                        Width="130" Height="130" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,40,40,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" 
                        Click="ProfileButtonClick" 
                        ToolTip="Mi Perfil"
                        Panel.ZIndex="5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="Black" Opacity="0.3" Margin="5"/>
                                <Image Source="/Assets/Icons/profile_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ShopButton" 
                        Height="160" Width="134" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="0,760,1726,0" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="ShopButtonClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="Black" Opacity="0.3" Margin="15"/>
                                <Image Source="/Assets/Icons/shop_icon.png" Stretch="Uniform"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="PlayButton" Content="{x:Static props:Strings.PlayButton}" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Width="500" Height="140"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        Margin="0,0,0,250"
                        FontFamily="/Assets/Fonts/#Dosis" FontSize="70" FontWeight="Bold" 
                        Cursor="Hand"
                        Click="PlayButtonClick">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.4" ShadowDepth="10" BlurRadius="20"/>
                    </Button.Effect>
                </Button>

                <Grid VerticalAlignment="Bottom" Margin="60,0,60,50">

                    <Button x:Name="FriendsButton" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="110" Width="110"
                            Background="Transparent" BorderThickness="0" Cursor="Hand" 
                            Click="FriendsButtonClick">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Image Source="/Assets/Icons/friendship_icon.png" Stretch="Uniform"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                        <Button x:Name="OptionsButton" 
                                Height="110" Width="110" Margin="0,0,30,0"
                                Background="Transparent" BorderThickness="0" Cursor="Hand" 
                                Click="OptionsButtonClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Image Source="/Assets/Icons/configuration_icon.png" Stretch="Uniform"/>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="LeaderboardButton" 
                                Height="110" Width="110"
                                Background="Transparent" BorderThickness="0" Cursor="Hand" 
                                Click="LeaderboardButtonClick"
                                ToolTip="Tabla de Clasificación">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Image Source="/Assets/Icons/leaderboards_icon.png" Stretch="Uniform"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="QuitButton" 
                                Height="110" Width="110"
                                Background="Transparent" BorderThickness="0" Cursor="Hand" 
                                Click="QuitButtonClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Image Source="/Assets/Icons/exit_icon.png" Stretch="Uniform"/>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

            </Grid>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        </Grid>
    </Viewbox>
</Window>