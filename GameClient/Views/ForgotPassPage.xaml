<Page x:Class="GameClient.ForgotPassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameClient"
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="ForgotPassPage">

    <Page.Resources>
    </Page.Resources>

    <Grid>
        <Button Content="Volver"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,21,0,0"
                Width="78"
                Click="OnBackButtonClick" Height="35" Cursor="Hand"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Top" MaxWidth="350"
                Background="#D8FFFFFF" CornerRadius="20" Padding="30" Margin="0,202,0,0">
            <StackPanel>
                <TextBlock Text="{x:Static props:Strings.ForgotPassLabel}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid Margin="0,5">
                    <TextBox x:Name="EmailTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="OnGenericTextBoxChanged"
                             Tag="{x:Reference EmailPlaceholder}"/>
                    <TextBlock x:Name="EmailPlaceholder" Text="{x:Static props:Strings.EmailLabel}" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                </Grid>

                <Grid Margin="0,5">
                    <TextBox x:Name="RepeatEmailTextBox" 
                             Style="{StaticResource InputTextBoxStyle}"
                             TextChanged="OnGenericTextBoxChanged"
                             Tag="{x:Reference RepeatEmailPlaceholder}"/>
                    <TextBlock x:Name="RepeatEmailPlaceholder" Text="{x:Static props:Strings.RepeatEmailLabel}" 
                               Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                </Grid>

                <Button x:Name="SendButton" Content="{x:Static props:Strings.AceptButton}" 
                        HorizontalAlignment="Center" Margin="0,20,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="OnSendButtonClick" Width="123"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>