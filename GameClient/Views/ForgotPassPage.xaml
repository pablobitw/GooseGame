<Page x:Class="GameClient.ForgotPassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameClient"
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="ForgotPassPage">

    <Page.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Button Content="Volver"
    Style="{StaticResource PrimaryButtonStyle}"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Margin="10,21,0,0"
    Width="78"
    Click="BackButton" Height="35" Cursor="Hand"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="350"
                Background="#D8FFFFFF" CornerRadius="20" Padding="30">
            <StackPanel>
                <TextBlock Text="{x:Static props:Strings.ForgotPassLabel}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid Margin="0,5">
                    <TextBlock x:Name="EmailPlaceholder" Text="{x:Static props:Strings.EmailLabel}" Foreground="Gray"
                               VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                    <TextBox x:Name="EmailTextBox" Background="Transparent" Height="35" VerticalContentAlignment="Center" Padding="8,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <TextBlock x:Name="RepeatEmailPlaceholder" Text="{x:Static props:Strings.RepeatEmailLabel}" Foreground="Gray"
                               VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                    <TextBox x:Name="RepeatEmailTextBox" Background="Transparent" Height="35" VerticalContentAlignment="Center" Padding="8,0"/>
                </Grid>

                <Button x:Name="SendButton" Content="{x:Static props:Strings.AceptButton}" 
                        HorizontalAlignment="Center" Margin="0,20,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="OnSendButtonClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>