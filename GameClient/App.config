<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<system.serviceModel>
		<bindings>
   <netTcpBinding>
    <binding name="NetTcpBinding_General" closeTimeout="00:00:10"
     openTimeout="00:00:10" receiveTimeout="00:10:00" sendTimeout="00:00:10"
     maxBufferSize="2147483647" maxReceivedMessageSize="2147483647">
     <security mode="None">
      <transport sslProtocols="None" />
     </security>
    </binding>
    <binding name="NetTcpBinding_Chat" closeTimeout="00:00:10" openTimeout="00:00:10"
     sendTimeout="00:00:10">
     <security mode="None">
      <transport sslProtocols="None" />
     </security>
    </binding>
    <binding name="NetTcpBinding_IFriendshipService">
     <security mode="None">
      <transport sslProtocols="None" />
     </security>
    </binding>
   </netTcpBinding>
  </bindings>

		<client>
   <endpoint address="net.tcp://localhost:8091/ChatService" binding="netTcpBinding"
    bindingConfiguration="NetTcpBinding_Chat" contract="ChatServiceReference.IChatService"
    name="NetTcpBinding_IChatService" />
   <endpoint address="net.tcp://localhost:8092/LobbyService" binding="netTcpBinding"
    bindingConfiguration="NetTcpBinding_General" contract="LobbyServiceReference.ILobbyService"
    name="NetTcpBinding_ILobbyService" />
   <endpoint address="net.tcp://localhost:8093/GameplayService"
    binding="netTcpBinding" bindingConfiguration="NetTcpBinding_General"
    contract="GameplayServiceReference.IGameplayService" name="NetTcpBinding_IGameplayService" />
   <endpoint address="net.tcp://localhost:8090/GameService" binding="netTcpBinding"
    bindingConfiguration="NetTcpBinding_General" contract="GameServiceReference.IGameService"
    name="NetTcpBinding_IGameService" />
   <endpoint address="net.tcp://localhost:8094/UserProfileService"
    binding="netTcpBinding" bindingConfiguration="NetTcpBinding_General"
    contract="UserProfileServiceReference.IUserProfileService" name="NetTcpBinding_IUserProfileService" />
   <endpoint address="net.tcp://localhost:8095/FriendshipService"
    binding="netTcpBinding" bindingConfiguration="NetTcpBinding_IFriendshipService"
    contract="FriendshipServiceReference.IFriendshipService" name="NetTcpBinding_IFriendshipService" />
  </client>
	</system.serviceModel>
</configuration>