<Window x:Class="GameClient.GameMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        xmlns:props="clr-namespace:GameClient.Resources"
        mc:Ignorable="d"
        Title="GameMainWindow" Height="720" Width="1280"
        WindowState="Maximized" WindowStyle="None">

    <Grid>
        <Grid x:Name="MainMenuGrid">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/logo2.png" 
                 Stretch="UniformToFill" 
                 Opacity="0.9">
                    <ImageBrush.Viewbox>
                        <Rect>0.2, 0.2, 0.6, 0.6</Rect>
                    </ImageBrush.Viewbox>
                </ImageBrush>
            </Grid.Background>

            <Image Source="/Assets/LOGO.png" HorizontalAlignment="Center" Height="250" Margin="0,50,0,0" VerticalAlignment="Top"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <Button x:Name="PlayButton"
                        Content="{x:Static props:Strings.PlayButton}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,10"
                        Click="PlayButtonClick"/>

                <Button x:Name="OptionsButton"
                        Content="{x:Static props:Strings.OptionsButton}"
                        Style="{StaticResource OrangeButtonStyle}"
                        Margin="0,10"
                        Click="OptionsButtonClick"/>

                <Button x:Name="QuitButton"
                        Content="{x:Static props:Strings.QuitButton}"
                        Style="{StaticResource GreenButtonStyle}"
                        Margin="0,10"
                        Click="QuitButtonClick"/>
            </StackPanel>
            <Button x:Name="PauseButton"
                    Height="60" Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="PauseButtonClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <Image Source="Assets/Icons/pause_icon.png"
                                   Stretch="Uniform"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ProfileButton"
                    Height="60" Width="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ProfileButtonClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <Image Source="Assets/Icons/user_icon2.png"
                                   Stretch="Uniform"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <Grid x:Name="PauseMenuGrid" Visibility="Collapsed" Background="#80000000">
        </Grid>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>