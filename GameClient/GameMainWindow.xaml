<Window x:Class="GameClient.GameMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        mc:Ignorable="d"
        Title="GameMainWindow" Height="720" Width="1280">
    
    <Grid>
        <!-- Menú Principal-->
        <Grid x:Name="MainMenuGrid">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/logo2.png" 
                            Stretch="UniformToFill" 
                            Opacity="0.9">
                    <ImageBrush.Viewbox>
                        <Rect>0.2, 0.2, 0.6, 0.6</Rect>
                    </ImageBrush.Viewbox>
                </ImageBrush>
            </Grid.Background>

            <Image Source="/Assets/LOGO.png" HorizontalAlignment="Left" Height="304" Margin="488,-27,0,0" VerticalAlignment="Top" Width="426"/>

            <!-- Botón de Pausa-->
            <Button x:Name="PauseButton"
                    Height="60" Width="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsCancel="True"
                    Click="PauseButton_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <Image Source="Assets/Icons/pause_icon.png"
                                   Stretch="Uniform"
                                   Height="60" Width="60"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Menú de Pausa -->
        <Grid x:Name="PauseMenuGrid" Visibility="Collapsed" Background="#80000000">
            <Border Background="#FF1E1E1E"
                    CornerRadius="15"
                    Padding="20"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0.95">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock Text="Paused"
                               Foreground="White"
                               FontFamily="/Assets/Fonts/#Dosis"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <Button x:Name="ResumeButton"
                            Content="Resume"
                            FontFamily="/Assets/Fonts/#Dosis"
                            FontSize="18"
                            Width="180"
                            Padding="10"
                            Margin="0,5"
                            Click="ResumeButton_Click"/>

                    <Button x:Name="OptionsButton"
                            Content="Options"
                            FontFamily="/Assets/Fonts/#Dosis"
                            FontSize="18"
                            Width="180"
                            Padding="10"
                            Margin="0,5"
                            Click="OptionsButton_Click"/>

                    <Button x:Name="QuitButton"
                            Content="Quit"
                            FontFamily="/Assets/Fonts/#Dosis"
                            FontSize="18"
                            Width="180"
                            Padding="10"
                            Margin="0,5"
                            Click="QuitButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>