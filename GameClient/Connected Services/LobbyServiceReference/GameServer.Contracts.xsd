    </xs:sequence>
  </xs:complexType>
  <xs:element name="PlayerLobbyDTO" nillable="true" type="tns:PlayerLobbyDTO" />
  <xs:complexType name="LobbyStateDTO">
    <xs:sequence>
      <xs:element minOccurs="0" name="IsGameStarted" type="xs:boolean" />
      <xs:element minOccurs="0" name="Players" nillable="true" type="tns:ArrayOfPlayerLobbyDTO" />
    </xs:sequence>
  </xs:complexType>
  <xs:element name="LobbyStateDTO" nillable="true" type="tns:LobbyStateDTO" />
