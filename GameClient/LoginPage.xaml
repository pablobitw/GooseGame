<Page x:Class="GameClient.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="450"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/logo2.png" 
                Stretch="UniformToFill" 
                Opacity="0.9">
                <ImageBrush.Viewbox>
                    <Rect>0.2, 0.2, 0.6, 0.6</Rect>
                </ImageBrush.Viewbox>
            </ImageBrush>
        </Grid.Background>
        <Button Content="Volver"
            Style="{StaticResource PrimaryButtonStyle}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10,21,0,0"
            Width="78"
            Click="OnBackButton" Height="35"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Image Source="/Assets/LOGO.png" Height="203" Margin="0,0,0,20" Width="405"/>

            <Border Background="#D8FFFFFF" CornerRadius="20" MaxWidth="360" Padding="25,20" Width="336">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="{x:Static props:Strings.LoginPageTitle}" 
                               FontFamily="/Assets/Fonts/#Dosis" FontSize="28" FontWeight="Bold" 
                               Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <!-- Username -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Margin="0,5" Height="40">
                        <Grid>
                            <TextBlock x:Name="UsernamePlaceholder" Text="{x:Static props:Strings.UsernameLabel}" 
                                       Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                            <TextBox x:Name="UsernameTextBox" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="8,0"
                                     TextChanged="OnUsernameTextChanged"/>
                        </Grid>
                    </Border>

                    <!-- Password -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Margin="0,5" Height="40">
                        <Grid>
                            <TextBlock x:Name="PasswordPlaceholder" Text="{x:Static props:Strings.PasswordLabel}" 
                                       Foreground="Gray" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False"/>
                            <PasswordBox x:Name="PasswordBox" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="8,0"
                                         PasswordChanged="OnPasswordChanged"/>
                        </Grid>
                    </Border>

                    <Button Content="{x:Static props:Strings.LoginButton}" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="0,15,0,5"
                            Click="Login"/>

                    <Button Content="{x:Static props:Strings.ForgotPassLabel}" 
                            Style="{StaticResource LinkButtonStyle}" 
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            Click="ForgotPass"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
