<Page x:Class="GameClient.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:props="clr-namespace:GameClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="450"
      Title="RegisterPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/logo2.png" 
                        Stretch="UniformToFill" 
                        Opacity="0.9">
                <ImageBrush.Viewbox>
                    <Rect>0.2,0.2,0.6,0.6</Rect>
                </ImageBrush.Viewbox>
            </ImageBrush>
        </Grid.Background>

        <Button Content="{x:Static props:Strings.BackButton}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10" Background="Transparent" BorderBrush="Transparent" Foreground="Gray" 
                Click="OnBackButton"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" CornerRadius="20" MaxWidth="360" Padding="25,20" Width="364">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="20" ShadowDepth="1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="{x:Static props:Strings.RegisterPageTitle}" 
                               FontSize="28" FontWeight="Bold" Foreground="#333333" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <!-- Email -->
                    <Grid Margin="0,5">
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource InputTextBoxStyle}"/>
                        <TextBlock Text="{x:Static props:Strings.EmailLabel}" 
                                   Foreground="Gray" Margin="10,0" VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Username -->
                    <Grid Margin="0,5">
                        <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputTextBoxStyle}"/>
                        <TextBlock Text="{x:Static props:Strings.UsernameLabel}" 
                                   Foreground="Gray" Margin="10,0" VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,5">
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputPasswordBoxStyle}" PasswordChanged="OnPasswordChanged"/>
                        <TextBlock x:Name="PasswordPlaceholder" Text="{x:Static props:Strings.PasswordLabel}" 
                                   Foreground="Gray" Margin="10,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Repeat Password -->
                    <Grid Margin="0,5">
                        <PasswordBox x:Name="RepeatPasswordBox" Style="{StaticResource InputPasswordBoxStyle}" PasswordChanged="OnRepeatPasswordChanged"/>
                        <TextBlock x:Name="RepeatPasswordPlaceholder" Text="{x:Static props:Strings.RepeatPasswordLabel}" 
                                   Foreground="Gray" Margin="10,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    </Grid>

                    <Button Content="{x:Static props:Strings.CreateAccountButton}" 
                            Style="{StaticResource OrangeButtonStyle}" 
                            Margin="0,15,0,5" 
                            Click="OnCreateAccount"/>
                    <Button Content="{x:Static props:Strings.AlreadyHaveAccountText}" 
                            Style="{StaticResource LinkButtonStyle}" 
                            Margin="0,5,0,0" 
                            HorizontalAlignment="Center" 
                            Click="OnGoToLogin"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
