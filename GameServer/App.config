<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
	</configSections>

	<connectionStrings>
		<add name="GameDatabaseContainer" connectionString="metadata=res://*/GameDatabase.csdl|res://*/GameDatabase.ssdl|res://*/GameDatabase.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=.;initial catalog=GooseGameDB;integrated security=True;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
		<add name="GameDatabase_Container" connectionString="metadata=res://*/GameDatabase.csdl|res://*/GameDatabase.ssdl|res://*/GameDatabase.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=.;initial catalog=GooseGameDB;integrated security=True;trustservercertificate=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
	</connectionStrings>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="DuplexTcpBinding">
					<reliableSession enabled="true" />
				</binding>
			</netTcpBinding>
		</bindings>

		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>

				<behavior name="tcpBehavior">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

		<services>
			<service behaviorConfiguration="mexBehavior" name="GameServer.GameService">
				<endpoint address="GameService"
						  binding="netTcpBinding"
						  contract="GameServer.IGameService" />

				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />

				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080/" />
						<add baseAddress="net.tcp://localhost:8090/" />
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="tcpBehavior" name="GameServer.Services.ChatService">
				<endpoint address="ChatService"
						  binding="netTcpBinding"
						  bindingConfiguration="DuplexTcpBinding"
						  contract="GameServer.Contracts.IChatService" />

				<endpoint address="mex"
						  binding="mexTcpBinding"
						  contract="IMetadataExchange" />

				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8091/" />
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>

	<appSettings file="secrets.config">
	</appSettings>
</configuration>
